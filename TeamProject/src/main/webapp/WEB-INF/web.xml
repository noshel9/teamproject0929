<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<servlet>
   	<description>Login 서블릿 호출</description>
    <display-name>Login</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.Login</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>Login</servlet-name>    
    <url-pattern>/Login.do</url-pattern>
</servlet-mapping>
<servlet>   	
    <servlet-name>SignUp</servlet-name>
    <servlet-class>controller.SignUp</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>SignUp</servlet-name>    
    <url-pattern>/SignUp.up</url-pattern>
</servlet-mapping>
<servlet>   	    
    <servlet-name>MemberAuth</servlet-name>
    <servlet-class>controller.MemberAuth</servlet-class>
    <init-param>    	
    	<param-name>admin_id</param-name>
    	<param-value>root</param-value>
    </init-param>
</servlet>
<servlet-mapping>
    <servlet-name>MemberAuth</servlet-name>    
    <url-pattern>/MemberAuth.mvc</url-pattern>
</servlet-mapping>
<servlet>   	
    <servlet-name>ListModel</servlet-name>
    <servlet-class>controller.ListModel</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ListModel</servlet-name>    
    <url-pattern>/ListModel.li</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>Map</servlet-name>
    <servlet-class>controller.Map</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>Map</servlet-name>    
    <url-pattern>/Map.map</url-pattern>
</servlet-mapping>


<security-constraint>
	<web-resource-collection>
		<web-resource-name>SSL Forward</web-resource-name>
		<url-pattern>/*</url-pattern>
	</web-resource-collection> 
	<user-data-constraint>
		<transport-guarantee>CONFIDENTIAL</transport-guarantee> 
	</user-data-constraint>
</security-constraint>

<security-constraint>
	<web-resource-collection>
		<web-resource-name>HTTPS or HTTP</web-resource-name>
		<url-pattern>/images/*</url-pattern>
		<url-pattern>/css/*</url-pattern>
	</web-resource-collection>
	<user-data-constraint>
		<transport-guarantee>NONE</transport-guarantee>
	</user-data-constraint>
</security-constraint>


</web-app>
